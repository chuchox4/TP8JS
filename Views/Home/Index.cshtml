@{
    ViewData["Title"] = "Home Page";
}
<body>
<div class="text-center">
    <h1 class="display-4">Bienvenido a Ruclot Series</h1>
    <img src = "" style = "witdh: 35%; height: 20%;">
    <h3>Las mejores series en la mejor calidad</h3>
</div>
<div class="container-fluid p-5" style="background-color: rgba(73, 5, 5, 0.6);;">
  <div class = "row">
@foreach(Series  SerieActual in @ViewBag.listaSeries)
{ 
         <div class= "col-sm-6 mt-4">   
          <div class="card" style="background-color: black;">
            <img class="card-img-top" src="@SerieActual.ImagenSerie" alt="">
              <div class="card-body">
                <h5 class="card-title">@SerieActual.Nombre</h5>
                <button type="button" class="btn btn-danger"  data-toggle="modal" data-target="#ModalSerie" onclick="VerTemporadas(@SerieActual.IdSerie)">Temporadas</button>
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ModalSerie" onclick="VerActores(@SerieActual.IdSerie)">Actores</button>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#ModalSerie" onclick="VerInfoSerie(@SerieActual.IdSerie)">Más Info</button>
              </div>
            </div>
         </div>   
}
  </div>
  <div class="modal fade" id="ModalSerie" tabindex="-1" role="dialog" aria-labelledby="NombreSerie" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-dark">
        <div id = "DescripcionSerie"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
</body>